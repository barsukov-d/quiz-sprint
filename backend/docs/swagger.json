{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Quiz Sprint TMA Backend API - A Telegram Mini App for interactive quizzes",
        "title": "Quiz Sprint API",
        "termsOfService": "https://quiz-sprint-tma.online/terms",
        "contact": {
            "name": "API Support",
            "url": "https://quiz-sprint-tma.online/support",
            "email": "support@quiz-sprint-tma.online"
        },
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        },
        "version": "1.0"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "paths": {
        "/quiz": {
            "get": {
                "description": "Get a list of all available quizzes with basic information",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "List all quizzes",
                "responses": {
                    "200": {
                        "description": "List of quizzes",
                        "schema": {
                            "$ref": "#/definitions/handlers.ListQuizzesResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/quiz/session/{sessionId}/answer": {
            "post": {
                "description": "Submit an answer for a question in an active quiz session",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Submit an answer",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Session ID",
                        "name": "sessionId",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Submit answer request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.SubmitAnswerRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Answer result with correctness, points, and next question or final result",
                        "schema": {
                            "$ref": "#/definitions/handlers.SubmitAnswerResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request, session completed, or already answered",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "401": {
                        "description": "Unauthorized - user mismatch",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Session, question, or answer not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/quiz/{id}": {
            "get": {
                "description": "Get detailed quiz information including questions, answers (without correct answer indicators), and top 3 leaderboard scores",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Get quiz details",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Quiz ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Quiz details with questions and top scores",
                        "schema": {
                            "$ref": "#/definitions/handlers.GetQuizDetailsResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid quiz ID",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Quiz not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/quiz/{id}/leaderboard": {
            "get": {
                "description": "Get the leaderboard for a specific quiz with top scores",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Get quiz leaderboard",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Quiz ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "type": "integer",
                        "description": "Number of entries to return (default 10)",
                        "name": "limit",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Leaderboard entries",
                        "schema": {
                            "$ref": "#/definitions/handlers.GetLeaderboardResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid quiz ID",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Quiz not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        },
        "/quiz/{id}/start": {
            "post": {
                "description": "Create a new quiz session for a user and return the first question",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "quiz"
                ],
                "summary": "Start a quiz session",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Quiz ID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Start quiz request",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.StartQuizRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Quiz session started with first question",
                        "schema": {
                            "$ref": "#/definitions/handlers.StartQuizResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request or quiz ID",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "404": {
                        "description": "Quiz not found",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "409": {
                        "description": "Active session already exists",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/handlers.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.AnswerDTO": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "position": {
                    "type": "integer"
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "handlers.ErrorDetail": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "handlers.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "$ref": "#/definitions/handlers.ErrorDetail"
                }
            }
        },
        "handlers.FinalResultDTO": {
            "type": "object",
            "properties": {
                "correctCount": {
                    "type": "integer"
                },
                "maxScore": {
                    "type": "integer"
                },
                "passed": {
                    "type": "boolean"
                },
                "percentage": {
                    "type": "integer"
                },
                "questionsCount": {
                    "type": "integer"
                },
                "totalScore": {
                    "type": "integer"
                }
            }
        },
        "handlers.GetLeaderboardResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handlers.LeaderboardEntryDTO"
                    }
                }
            }
        },
        "handlers.GetQuizDetailsData": {
            "type": "object",
            "properties": {
                "quiz": {
                    "$ref": "#/definitions/handlers.QuizDetailDTO"
                },
                "topScores": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handlers.LeaderboardEntryDTO"
                    }
                }
            }
        },
        "handlers.GetQuizDetailsResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/handlers.GetQuizDetailsData"
                }
            }
        },
        "handlers.LeaderboardEntryDTO": {
            "type": "object",
            "properties": {
                "completedAt": {
                    "type": "integer"
                },
                "rank": {
                    "type": "integer"
                },
                "score": {
                    "type": "integer"
                },
                "userId": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "handlers.ListQuizzesResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handlers.QuizDTO"
                    }
                }
            }
        },
        "handlers.QuestionDTO": {
            "type": "object",
            "properties": {
                "answers": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handlers.AnswerDTO"
                    }
                },
                "id": {
                    "type": "string"
                },
                "points": {
                    "type": "integer"
                },
                "position": {
                    "type": "integer"
                },
                "text": {
                    "type": "string"
                }
            }
        },
        "handlers.QuizDTO": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "passingScore": {
                    "type": "integer"
                },
                "questionsCount": {
                    "type": "integer"
                },
                "timeLimit": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "handlers.QuizDetailDTO": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "passingScore": {
                    "type": "integer"
                },
                "questions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/handlers.QuestionDTO"
                    }
                },
                "timeLimit": {
                    "type": "integer"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "handlers.SessionDTO": {
            "type": "object",
            "properties": {
                "completedAt": {
                    "type": "integer"
                },
                "currentQuestion": {
                    "type": "integer"
                },
                "id": {
                    "type": "string"
                },
                "quizId": {
                    "type": "string"
                },
                "score": {
                    "type": "integer"
                },
                "startedAt": {
                    "type": "integer"
                },
                "status": {
                    "type": "string"
                },
                "userId": {
                    "type": "string"
                }
            }
        },
        "handlers.StartQuizData": {
            "type": "object",
            "properties": {
                "firstQuestion": {
                    "$ref": "#/definitions/handlers.QuestionDTO"
                },
                "session": {
                    "$ref": "#/definitions/handlers.SessionDTO"
                },
                "timeLimit": {
                    "type": "integer"
                },
                "totalQuestions": {
                    "type": "integer"
                }
            }
        },
        "handlers.StartQuizRequest": {
            "type": "object",
            "properties": {
                "userId": {
                    "type": "string"
                }
            }
        },
        "handlers.StartQuizResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/handlers.StartQuizData"
                }
            }
        },
        "handlers.SubmitAnswerData": {
            "type": "object",
            "properties": {
                "correctAnswerId": {
                    "type": "string"
                },
                "finalResult": {
                    "$ref": "#/definitions/handlers.FinalResultDTO"
                },
                "isCorrect": {
                    "type": "boolean"
                },
                "isQuizCompleted": {
                    "type": "boolean"
                },
                "nextQuestion": {
                    "$ref": "#/definitions/handlers.QuestionDTO"
                },
                "pointsEarned": {
                    "type": "integer"
                },
                "totalScore": {
                    "type": "integer"
                }
            }
        },
        "handlers.SubmitAnswerRequest": {
            "type": "object",
            "properties": {
                "answerId": {
                    "type": "string"
                },
                "questionId": {
                    "type": "string"
                },
                "userId": {
                    "type": "string"
                }
            }
        },
        "handlers.SubmitAnswerResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "$ref": "#/definitions/handlers.SubmitAnswerData"
                }
            }
        }
    }
}